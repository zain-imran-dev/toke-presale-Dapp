{
  "name": "presale-dapp",
  "version": "1.0.0",
  "description": "A modern, secure, and feature-rich decentralized application for token presales",
  "main": "index.js",
  "scripts": {
    "setup": "node scripts/setup.js",
    "deploy": "hardhat run scripts/deploy.js --network localhost",
    "deploy:ignition": "hardhat ignition deploy ignition/modules/DeployPresale.js --network localhost",
    "node": "hardhat node",
    "test": "hardhat test",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:start": "cd frontend && npm start"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "presale",
    "dapp",
    "react",
    "nextjs",
    "hardhat",
    "blockchain"
  ],
  "author": "Presale DApp Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "hardhat": "^2.26.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "contracts": "^0.4.0",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/presale-dapp.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/presale-dapp/issues"
  },
  "homepage": "https://github.com/yourusername/presale-dapp#readme"
}
